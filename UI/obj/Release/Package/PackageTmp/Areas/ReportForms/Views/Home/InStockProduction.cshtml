
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>StocksOrder</title>
    <link href="~/Scripts/assets/css/amazeui.css" rel="stylesheet" />
    <script src="~/Scripts/assets/js/jquery.min.js"></script>
    <script src="~/Scripts/assets/js/amazeui.js"></script>
    <script src="~/Scripts/js/modal.js"></script>
</head>
<body>
    <div>
        <div style="margin-bottom:40px;">
            <a href="/Home/maindefault" class="am-icon-home">&nbsp;&nbsp;进销存&nbsp;<i class="am-icon-arrow-circle-right"></i>&nbsp;&nbsp;</a>
            <a href="/ReportForms/Home/Index" class="am-icon-bar-chart">&nbsp;&nbsp;统计报表&nbsp;<i class="am-icon-arrow-circle-right"></i>&nbsp;&nbsp;</a>
            <span style="font-size:14px;font-weight:bolder;">生产入库</span>
        </div>
    </div>
    <!-- 为ECharts准备一个具备大小（宽高）的Dom -->
    <div id="main" style="height:500px;width:95%;"></div>
    <!-- ECharts单文件引入 -->
    <script src="~/Scripts/build/dist/echarts-all.js"></script>
    <script type="text/javascript">
        // 基于准备好的dom，初始化echarts图表
            $(function () {
             //myChart.showLoading({
            //    text: '正在努力的读取数据中...',    //loading话术
            //});
            option = {
                    title: {
                        text: '近12个月生产入库数',
                        subtext: '及时数据'
                    },
                    tooltip: {
                        trigger: 'axis'
                    },
                    legend: {
                        data: ['未审核', '已审核']
                    },
                    toolbox: {
                        show: true,
                        feature: {
                            mark: { show: true },
                            dataView: { show: true, readOnly: false },
                            magicType: { show: true, type: ['line', 'bar'] },
                            restore: { show: true },
                            saveAsImage: { show: true }
                        }
                    },
                    calculable: true,
                    xAxis: [
                        {
                            type: 'category',
                            data: []
                        }
                    ],
                    yAxis: [
                        {
                            type: 'value'
                        }
                    ],
                    series: [
                        {
                            name: '未审核',
                            type: 'bar',
                            data: [],
                            markPoint: {
                                data: [
                                    { type: 'max', name: '最大值' },
                                    { type: 'min', name: '最小值' }
                                ]
                            },
                            markLine: {
                                data: [
                                    { type: 'average', name: '平均值' }
                                ]
                            }
                        },
                        {
                            name: '已审核',
                            type: 'bar',
                            data: [],
                            markPoint: {
                                data: [
                                    { type: 'max', name: '最大值' },
                                    { type: 'min', name: '最小值' }
                                ]
                            },
                            markLine: {
                                data: [
                                    { type: 'average', name: '平均值' }
                                ]
                            }
                        },
                        {
                            name: '生产入库细分',
                            type: 'pie',
                            tooltip: {
                                trigger: 'item',
                                formatter: '{a} <br/>{b} : {c} ({d}%)'
                            },
                            center: [160, 130],
                            radius: [0, 50],
                            itemStyle: {
                                normal: {
                                    labelLine: {
                                        length: 20
                                    }
                                }
                            },
                            data: [
                                { value: 0, name: '未审核' },
                                { value: 0, name: '已审核' }
                            ]
                        }
                    ]
            };

            var myChart = echarts.init(document.getElementById('main'));
            //显示近12个月的时间
            $.post("/ReportForms/Main/GetNow12Y", {}, function (data) {
                option.xAxis[0].data = data;
                $.post("/ReportForms/Main/GetProduceInDepotCountByMtoth", {}, function (dt) {
                    option.series[0].data = dt;
                    $.post("/ReportForms/Main/GetProduceInDepotCountByMtoth1", {}, function (dt) {
                        option.series[1].data = dt;
                        //alert(JSON.stringify(dt));
                        $.post("/ReportForms/Main/GetProduceInDepotStateCount", {}, function (data) {
                            option.series[2].data[0].value = data[0];
                            option.series[2].data[1].value = data[1];
                            myChart.setOption(option);//调用函数显示数据
                        });

                    });
                });
            });


        });

    </script>
</body>
</html>