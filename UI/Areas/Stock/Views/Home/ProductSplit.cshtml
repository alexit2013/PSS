
@using UI.Models.Model;
@using UI.Option.HtmlPage;



<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>StocksOrder</title>
    <link href="~/Scripts/assets/css/amazeui.css" rel="stylesheet" />
    <script src="~/Scripts/assets/js/jquery.min.js"></script>
    <script src="~/Scripts/assets/js/amazeui.js"></script>
    <script src="~/Scripts/js/modal.js"></script>
    <script src="~/Scripts/js/MyJs.js"></script>
   
    <style>
        .tabcontent {
            height: auto;
        }

        .input_right {
            margin-right: 10px;
        }

        #probody tr {
            cursor: pointer;
        }

        #probodyed tr {
            cursor: pointer;
            font-size: 11px;
        }

            #probodyed tr:hover {
                background-color: #e8fcc3;
            }

        .ck {
            background-color: #d5f79d;
        }
    </style>
 

</head>
<body>
    <div>
        <div style="margin-bottom:10px;">
            <a href="/Home/maindefault" class="am-icon-home">&nbsp;&nbsp;进销存&nbsp;<i class="am-icon-arrow-circle-right"></i>&nbsp;&nbsp;</a>
            <a href="/Stock/Home/Index" class="am-icon-cubes">&nbsp;&nbsp;库存管理&nbsp;<i class="am-icon-arrow-circle-right"></i>&nbsp;&nbsp;</a>
            <span style="font-size:14px;font-weight:bolder;">商品拆分</span>
        </div>

        <div class="am-tabs am-margin" data-am-tabs="{noSwipe: 1}">
            <ul class="am-tabs-nav am-nav am-nav-tabs">
                <li id="tab_1" class="am-active"><a href="#tab1" class="am-icon-bank">商品拆分管理</a></li>
                <li id="tab_2"><a href="#tab2" class="am-icon-edit">商品拆分单</a></li>
            </ul>
            <div class="am-tabs-bd">
                <div class="tabcontent am-tab-panel am-fade am-in am-active " id="tab1">
                    <div id="search_div" style="display:none">
                        <form class="am-form" id="Search_form" onsubmit="return false">
                            <table style="font-size:13px;">
                                <tr>
                                    <td>商品拆分单号：</td>
                                    <td><input id="SplitID1" class="am-form-field am-text-xs" style="width:120px;" /></td>
                                    <td>&nbsp;&nbsp;商品名称：</td>
                                    <td><input id="ProName1" class="am-form-field am-text-xs" style="width:120px;" /></td>
                                    <td>&nbsp;&nbsp;操作人：</td>
                                    <td><input id="UsersName1" class="am-form-field am-text-xs" style="width:120px;" /></td>
                                    <td>&nbsp;&nbsp;仓库：</td>
                                    <td>
                                        <select name="DepotID" id="DepotID1" data-am-selected="{btnWidth: 100, btnSize: 'xs', btnStyle: 'secondary',maxHeight:150}">
                                            <option value="">所有仓库</option>
                                            @{
                                                foreach (Depots item in ViewData["dlist"] as List<Depots>)
                                                {
                                                    <option value="@item.DepotID">@item.DepotName</option>
                                                }
                                            }
                                        </select>
                                    </td>
                                    <td>&nbsp;&nbsp;操作时间：</td>
                                    <td><input class="am-form-field am-text-xs" id="SplitDate1" style="width:110px;" data-am-datepicker readonly required placeholder="点击选择日期" /> </td>
                                    <td>&nbsp;&nbsp;<input type="radio" name="SplitState1" value="-1" checked="checked" />全部<br />&nbsp;&nbsp;<input type="radio" name="SplitState1" value="1" />已审<br />&nbsp;&nbsp;<input type="radio" name="SplitState1" value="0" />未审</td>
                                    <td><div class=""><button class="am-btn am-btn-primary am-radius am-icon-search " id="brn_search" style="width:80px;margin-left:10px;font-size:14px;">查询</button></div> </td>
                                </tr>
                            </table>
                        </form>
                    </div>
                    <div>
                        <i id="show_div" class="am-icon-angle-double-down am-close am-close-alt am-close-spin" data-am-popover="{content:'切换查询',trigger:'hover focus'}"
                           style="cursor:pointer;color:#0c9b20;margin-left:97%"></i>
                    </div>

                        <div style="width:65%;float:left;margin-top:-20px;">
                            <div>
                                <span class="am-badge am-badge-warning">商品拆分信息</span>
                            </div>
                            <table class=" am-table am-table-bordered am-radius " style="font-size:12px;">
                                <thead> <tr style="font-size:12px;color:white; background-color:#0c9b20"><td>商品拆分单编号</td><td>商品名称</td><td>仓库</td><td>价格</td><td>数量</td><td>时间</td><td>操作人</td><td>审核状态</td><td>备注</td><td align="center" style="width:180px;">操作</td></tr></thead>
                                <tbody id="probodyed"> </tbody>
                            </table>
                            <div style="margin-left:50px;">
                                @Html.GroupPage2("", "", ViewData["count"], "", 10, ViewData["PageIndex"], "am-btn-secondary")
                                @Html.Hidden("MaxPageIndex", ViewData["MaxPageIndex"])
                                @Html.Hidden("count", ViewData["count"])
                            </div>
                        </div>
                        <div style="width:33%;float:left;margin-left:1%;padding-top:30px;">
                            <div><span class="am-badge am-badge-warning">拆分单详单</span></div>
                            <table class=" am-table am-table-bordered  am-table-striped am-table-hover" style="font-size:12px;">
                                <thead> <tr style="font-size:12px;color:white; background-color:#0c9b20;"><td>商品名字</td><td>商品数量</td><td>商品价格</td><td>备注</td></tr></thead>
                                <tbody id="stockbodyed"> </tbody>
                            </table>
                        </div>
                    </div>

                <div class="tabcontent am-tab-panel  " id="tab2">
                    <form class="am-form" id="form_order">
                        <div style="position:absolute;background-color:#d5f79d;margin-left:80px;display:none;overflow:auto; width:600px;height:250px; " id="prodrown">
                            <table class=" am-table am-table-bordered am-table-striped am-table-hover" style="font-size:13px;">
                                <thead> <tr style="font-size:14px;color:white; background-color:#0c9b20"><td>商品编号</td><td>商品名称</td><td>单位</td><td>规格</td><td>颜色</td><td>预设进价</td></tr></thead>
                                <tbody id="pro_body"></tbody>
                            </table>
                        </div>

                        <div style="float:left;margin-bottom:10px;margin-left:1%">
                            <table style="font-size:13px;">
                                <tr>
                                    <td>商品拆分编号：</td>
                                    <td><input id="SplitID" readonly="readonly" class="input-right am-form-field am-text-xs" style="width:120px;" required /></td>
                                    <td>&nbsp;&nbsp;仓库：</td>
                                    <td>
                                        <select id="DepotID" style="width:100px;"  onchange="SelectCus()">

                                            @{
                                                foreach (Depots item in ViewData["dlist"] as List<Depots>)
                                                {
                                                    <option value="@item.DepotID">@item.DepotName</option>
                                                }
                                            }
                                        </select>
                                    </td>
                                    <td>&nbsp;&nbsp;被拆商品：</td>
                                    <td><input class="am-form-field am-text-xs" id="ProName"  style="width:120px;"  readonly required placeholder="点击选择商品" />
                                        @Html.Hidden("ProID", "")
                                    </td>
                                    <td>&nbsp;&nbsp;拆分数量：</td>
                                    <td><input class="am-form-field am-text-xs" id="SplitAmount" style="width:100px;" required placeholder="请输入数量" /></td>
                                    <td>&nbsp;&nbsp;价格：</td>
                                    <td><input class="am-form-field am-text-xs" id="SplitPrice" style="width:100px;" required readonly placeholder="" /></td>
                                    <td>&nbsp;&nbsp;操作时间：</td>
                                    <td><input class="am-form-field am-text-xs" id="SplitDate" value="2015-01-01" style="width:120px;" data-am-datepicker readonly required placeholder="点击选择日期" /></td>
                                    @*<td>
                                        <input type="button" class="am-btn-primary am-btn am-radius am-btn-xs" id="ConvertAdd" value="转为添加" style="margin-left:1%" />
                                    </td>*@
                                </tr>
                            </table>
                        </div>
                        <hr />
                        <div style="width:98%;margin-left:1%;margin-top:10px;overflow:auto;margin-bottom:100px;">
                            <table onclick="hideproshow()" class="am-table am-table-bordered am-table-striped am-table-hover" style="font-size:13px;width:100%">
                                <thead> <tr style="font-size:14px;color:white; background-color:#0c9b20"><td style="width:70px;">商品编号</td><td>商品名称</td><td>单位</td><td>规格</td><td>颜色</td><td style="width:120px;">数量</td><td style="width:120px;">价格</td><td style="width:160px;">备注</td><td align="center">操作</td></tr></thead>
                                <tbody id="orderbody">
                                    <tr><td align="center"><button name="showpro" type="button" class="am-btn am-btn-primary am-dropdown-toggle am-btn-sm" style="font-size:10px;">商品 <span class="am-icon-caret-down"></span></button></td><td></td><td></td><td></td><td></td><td><input name="procount" type="number" max="100000000" placeholder="请输入商品数量" style="width:100px;font-size:11px;" required /></td><td><input type="number" name="proprice" placeholder="请输入商品价格" style="width:100px;font-size:11px;" required /></td><td><input type="text" placeholder="备注" style="width:160px;font-size:11px;" /></td><td align="center"><a class="am-icon-remove" title="删除" href="#" style="font-size:18px;"></a></td></tr>
                                </tbody>
                                <tfoot>
                                    <tr><td colspan="12"><i id="Addtr" style="color:#ff6a00;" class="am-close am-close-alt am-close-spin" data-am-popover="{content:'添加一行',trigger:'hover'}">+</i></td></tr>
                                </tfoot>
                            </table>
                        </div>
                        <div style="margin-left:1%">
                            <table>
                                <tr>
                                    <td>&nbsp;&nbsp;备注：</td>
                                    <td><textarea rows="4" cols="30" id="SplitDesc" style="font-size:12px;"></textarea></td>
                                    <td><input class="am-btn am-btn-primary am-radius" id="btn_addorder" type="button" value="保存" style="margin-left:50px;" /></td>
                                    <td><input class="am-btn am-btn-danger am-radius" type="reset" value="重置" style="margin-left:30px;" /></td>
                                    <td><input type="button" class="am-btn-primary am-btn am-radius" id="ConvertAdd" value="转为添加" style="margin-left:20%" /></td>
                                </tr>
                            </table>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <div class="am-modal am-modal-no-btn" tabindex="-1" id="select_modal">
        <div class="am-modal-dialog">
            <div class="am-modal-hd" style="background-color:#0094ff;color:white;"> 选择商品<a href="javascript: void(0)" style="color:white;" class="am-close am-close-spin" data-am-modal-close>&times;</a></div>
            <div class="am-modal-bd" style="padding-top:8px;">
                <div style="overflow:auto">
                    <table class=" am-table am-table-bordered am-table-striped am-table-hover" style="font-size:13px;">
                        <thead> <tr style="font-size:14px;color:white; background-color:#0c9b20"><td>商品编号</td><td>商品名称</td><td>单位</td><td>规格</td><td>颜色</td><td>预设进价</td></tr></thead>
                        <tbody id="probody1"></tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <script src="~/Scripts/js/Stock/ProductSplitJavaScript.js"></script>
    <script>
        $(function () {
            $("#show_div").click(function () {
                var div = $(this);
                if (div.attr("class").indexOf("up")>0) {
                    div.removeClass("am-icon-angle-double-up").addClass("am-icon-angle-double-down");
                    $("#search_div").slideUp(300);
                } else {
                    div.removeClass("am-icon-angle-double-down").addClass("am-icon-angle-double-up");
                    $("#search_div").slideDown(300);
                }
            });
        });
    </script>

</body>
</html>
